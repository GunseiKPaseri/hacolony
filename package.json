{
  "name": "hacolony",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "start:with-scheduler": "node scripts/start-server.ts",
    "fmt": "npm run fmt:prettier && npm run fmt:prisma",
    "fmt:prettier": "prettier --write .",
    "fmt:prisma": "prisma format --schema ./src/infrastructure/prisma/schema.prisma",
    "fmt:linter": "next lint --fix",
    "check": "npm run check:ts && npm run check:prisma && next lint",
    "check:ts": "tsc --noEmit",
    "check:prisma": "prisma validate --schema ./src/infrastructure/prisma/schema.prisma",
    "check:linter": "next lint",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "db:seed": "tsx src/infrastructure/prisma/seed.ts",
    "db:generate": "prisma generate --schema ./src/infrastructure/prisma/schema.prisma",
    "db:migrate": "prisma migrate deploy --schema ./src/infrastructure/prisma/schema.prisma",
    "db:studio": "prisma studio --schema ./src/infrastructure/prisma/schema.prisma",
    "pre-push": "npm run check && npm run fmt && npm test"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.9.1",
    "@prisma/client": "^6.7.0",
    "@radix-ui/react-avatar": "^1.1.7",
    "@radix-ui/react-dialog": "^1.1.11",
    "@radix-ui/react-dropdown-menu": "^2.1.12",
    "@radix-ui/react-slot": "^1.2.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/query-core": "^5.75.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.18.1",
    "jotai": "^2.12.3",
    "jotai-tanstack-query": "^0.9.0",
    "lucide-react": "^0.507.0",
    "next": "15.3.1",
    "next-auth": "^4.24.11",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "pino-roll": "^3.1.0",
    "prisma": "^6.7.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "reflect-metadata": "^0.2.2",
    "rss-parser": "^3.13.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "tsyringe": "^4.10.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/ui": "^3.2.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "^10.1.5",
    "jsdom": "^26.1.0",
    "postcss": "^8",
    "prettier": "^3.5.3",
    "prisma-json-types-generator": "^3.4.2",
    "tailwindcss": "^4",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "vitest": "^3.2.2"
  }
}
